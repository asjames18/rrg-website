---
/**
 * Debug Authentication Page
 * Visit: http://localhost:4321/debug-auth
 * 
 * Shows current user authentication status and role
 */
export const prerender = false;

import { supabaseServer } from '../lib/supabase-server';
---

<Base title="Debug Authentication | Real & Raw Gospel">
  <div class="min-h-screen bg-gradient-to-br from-black via-neutral-900 to-black">
    <div class="container mx-auto px-4 py-8">
      <div class="max-w-4xl mx-auto">
        <h1 class="text-3xl font-bold text-amber-100 mb-8">Authentication Debug</h1>
        
        <div class="bg-neutral-900 border border-neutral-800 rounded-lg p-6 space-y-4">
          <h2 class="text-xl font-bold text-amber-100">Current Status</h2>
          
          <div class="space-y-3">
            <div class="flex items-center gap-3">
              <span class="text-2xl">üîê</span>
              <div>
                <div class="text-sm text-neutral-400">Authentication Status</div>
                <div class="text-lg font-semibold text-neutral-200">
                  {Astro.locals.user ? '‚úÖ Signed In' : '‚ùå Not Signed In'}
                </div>
              </div>
            </div>
            
            {Astro.locals.user && (
              <>
                <div class="flex items-center gap-3">
                  <span class="text-2xl">üë§</span>
                  <div>
                    <div class="text-sm text-neutral-400">User Email</div>
                    <div class="text-lg font-semibold text-neutral-200">{Astro.locals.user.email}</div>
                  </div>
                </div>
                
                <div class="flex items-center gap-3">
                  <span class="text-2xl">üé≠</span>
                  <div>
                    <div class="text-sm text-neutral-400">User Role</div>
                    <div class="text-lg font-semibold text-neutral-200">
                      {Astro.locals.userRole || 'No role assigned'}
                    </div>
                  </div>
                </div>
                
                <div class="flex items-center gap-3">
                  <span class="text-2xl">üëë</span>
                  <div>
                    <div class="text-sm text-neutral-400">Admin Status</div>
                    <div class="text-lg font-semibold text-neutral-200">
                      {Astro.locals.isAdmin ? '‚úÖ Admin' : '‚ùå Not Admin'}
                    </div>
                  </div>
                </div>
                
                <div class="flex items-center gap-3">
                  <span class="text-2xl">‚úèÔ∏è</span>
                  <div>
                    <div class="text-sm text-neutral-400">Editor Status</div>
                    <div class="text-lg font-semibold text-neutral-200">
                      {Astro.locals.isEditor ? '‚úÖ Editor' : '‚ùå Not Editor'}
                    </div>
                  </div>
                </div>
              </>
            )}
          </div>
          
          {!Astro.locals.user && (
            <div class="mt-6 p-4 bg-amber-900/20 border border-amber-800/50 rounded-lg">
              <h3 class="text-lg font-bold text-amber-100 mb-2">Not Signed In</h3>
              <p class="text-neutral-300 mb-4">
                You need to sign in to access the CMS. Click the button below to sign in.
              </p>
              <a 
                href="/auth" 
                class="inline-block bg-amber-700 hover:bg-amber-600 text-white font-semibold px-6 py-3 rounded-lg transition-colors"
              >
                Sign In
              </a>
            </div>
          )}
          
          {Astro.locals.user && !Astro.locals.isEditor && (
            <div class="mt-6 p-4 bg-red-900/20 border border-red-800/50 rounded-lg">
              <h3 class="text-lg font-bold text-red-100 mb-2">Insufficient Permissions</h3>
              <p class="text-neutral-300 mb-4">
                You need admin or editor role to access the CMS. Your current role is: <strong>{Astro.locals.userRole}</strong>
              </p>
              <div class="space-y-2">
                <a 
                  href="/admin-promote" 
                  class="inline-block bg-amber-700 hover:bg-amber-600 text-white font-semibold px-6 py-3 rounded-lg transition-colors mr-4"
                >
                  Promote to Admin
                </a>
                <a 
                  href="/auth" 
                  class="inline-block bg-neutral-700 hover:bg-neutral-600 text-white font-semibold px-6 py-3 rounded-lg transition-colors"
                >
                  Sign Out & Try Again
                </a>
              </div>
            </div>
          )}
          
          {Astro.locals.user && Astro.locals.isEditor && (
            <div class="mt-6 p-4 bg-green-900/20 border border-green-800/50 rounded-lg">
              <h3 class="text-lg font-bold text-green-100 mb-2">‚úÖ Access Granted</h3>
              <p class="text-neutral-300 mb-4">
                You have the correct permissions to access the CMS!
              </p>
              <div class="space-y-2">
                <a 
                  href="/admin" 
                  class="inline-block bg-amber-700 hover:bg-amber-600 text-white font-semibold px-6 py-3 rounded-lg transition-colors mr-4"
                >
                  Go to Admin Portal
                </a>
                <a 
                  href="/cms-dashboard" 
                  class="inline-block bg-blue-700 hover:bg-blue-600 text-white font-semibold px-6 py-3 rounded-lg transition-colors"
                >
                  Go to CMS Dashboard
                </a>
              </div>
            </div>
          )}
        </div>
      </div>
    </div>
  </div>
</Base>




