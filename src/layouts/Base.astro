---
import '../styles/global.css';

interface Props {
  title: string;
  description?: string;
}

const { title, description = 'Real & Raw Gospel - Training the Remnant of YAHUAH' } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{title} | Real & Raw Gospel</title>
  </head>
  <body class="min-h-screen flex flex-col bg-neutral-50 text-neutral-900 dark:bg-neutral-900 dark:text-neutral-50">
    <header class="sticky top-0 z-50 bg-white/95 dark:bg-neutral-800/95 backdrop-blur border-b border-neutral-200 dark:border-neutral-700">
      <nav class="container mx-auto px-4 py-4">
        <div class="flex items-center justify-between">
          <a href="/" class="text-2xl font-bold text-neutral-900 dark:text-neutral-50 hover:text-blue-600 dark:hover:text-blue-400 transition-colors">
            Real & Raw Gospel
          </a>
          <button id="mobile-menu-toggle" class="md:hidden p-2 rounded-lg hover:bg-neutral-100 dark:hover:bg-neutral-700" aria-label="Toggle menu">
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
            </svg>
          </button>
          <ul id="nav-menu" class="hidden md:flex items-center gap-6">
            <li><a href="/start-here" class="hover:text-blue-600 dark:hover:text-blue-400 transition-colors">Start Here</a></li>
            <li><a href="/walk-in-the-spirit" class="hover:text-blue-600 dark:hover:text-blue-400 transition-colors">Walk in the Spirit</a></li>
            <li><a href="/prayer-and-fasting" class="hover:text-blue-600 dark:hover:text-blue-400 transition-colors">Prayer & Fasting</a></li>
            <li><a href="/feasts" class="hover:text-blue-600 dark:hover:text-blue-400 transition-colors">Feasts of YAH</a></li>
            <li><a href="/spiritual-warfare" class="hover:text-blue-600 dark:hover:text-blue-400 transition-colors">Spiritual Warfare</a></li>
            <li><a href="/identity-and-messiah" class="hover:text-blue-600 dark:hover:text-blue-400 transition-colors">Identity & Mashiach</a></li>
            <li><a href="/end-times" class="hover:text-blue-600 dark:hover:text-blue-400 transition-colors">End-Times</a></li>
            <li><a href="/videos" class="hover:text-blue-600 dark:hover:text-blue-400 transition-colors">Videos</a></li>
            <li><a href="/bible" class="hover:text-blue-600 dark:hover:text-blue-400 transition-colors">Bible</a></li>
            <li><a href="/blog" class="hover:text-blue-600 dark:hover:text-blue-400 transition-colors">Blog</a></li>
            <li><a href="/music" class="hover:text-blue-600 dark:hover:text-blue-400 transition-colors">Music</a></li>
            <li><a href="/books" class="hover:text-blue-600 dark:hover:text-blue-400 transition-colors">Books</a></li>
          </ul>
        </div>
        <div id="mobile-menu" class="hidden md:hidden mt-4 pb-2">
          <ul class="flex flex-col gap-3">
            <li><a href="/start-here" class="block py-2 hover:text-blue-600 dark:hover:text-blue-400 transition-colors">Start Here</a></li>
            <li><a href="/walk-in-the-spirit" class="block py-2 hover:text-blue-600 dark:hover:text-blue-400 transition-colors">Walk in the Spirit</a></li>
            <li><a href="/prayer-and-fasting" class="block py-2 hover:text-blue-600 dark:hover:text-blue-400 transition-colors">Prayer & Fasting</a></li>
            <li><a href="/feasts" class="block py-2 hover:text-blue-600 dark:hover:text-blue-400 transition-colors">Feasts of YAH</a></li>
            <li><a href="/spiritual-warfare" class="block py-2 hover:text-blue-600 dark:hover:text-blue-400 transition-colors">Spiritual Warfare</a></li>
            <li><a href="/identity-and-messiah" class="block py-2 hover:text-blue-600 dark:hover:text-blue-400 transition-colors">Identity & Mashiach</a></li>
            <li><a href="/end-times" class="block py-2 hover:text-blue-600 dark:hover:text-blue-400 transition-colors">End-Times</a></li>
            <li><a href="/videos" class="block py-2 hover:text-blue-600 dark:hover:text-blue-400 transition-colors">Videos</a></li>
            <li><a href="/bible" class="block py-2 hover:text-blue-600 dark:hover:text-blue-400 transition-colors">Bible</a></li>
            <li><a href="/blog" class="block py-2 hover:text-blue-600 dark:hover:text-blue-400 transition-colors">Blog</a></li>
            <li><a href="/music" class="block py-2 hover:text-blue-600 dark:hover:text-blue-400 transition-colors">Music</a></li>
            <li><a href="/books" class="block py-2 hover:text-blue-600 dark:hover:text-blue-400 transition-colors">Books</a></li>
          </ul>
        </div>
      </nav>
    </header>

    <main class="flex-1">
      <slot />
    </main>

    <footer class="bg-neutral-800 dark:bg-neutral-950 text-neutral-200 py-12 mt-16">
      <div class="container mx-auto px-4">
        <div class="grid md:grid-cols-4 gap-8">
          <div>
            <h3 class="font-bold text-lg mb-4">Real & Raw Gospel</h3>
            <p class="text-sm text-neutral-400">Training the remnant in the ways of YAHUAH</p>
          </div>
          <div>
            <h4 class="font-semibold mb-3">Core Teaching</h4>
            <ul class="space-y-2 text-sm">
              <li><a href="/start-here" class="text-neutral-400 hover:text-white transition-colors">Start Here</a></li>
              <li><a href="/walk-in-the-spirit" class="text-neutral-400 hover:text-white transition-colors">Walk in the Spirit</a></li>
              <li><a href="/prayer-and-fasting" class="text-neutral-400 hover:text-white transition-colors">Prayer & Fasting</a></li>
              <li><a href="/feasts" class="text-neutral-400 hover:text-white transition-colors">Feasts of YAH</a></li>
            </ul>
          </div>
          <div>
            <h4 class="font-semibold mb-3">Resources</h4>
            <ul class="space-y-2 text-sm">
              <li><a href="/bible" class="text-neutral-400 hover:text-white transition-colors">Bible</a></li>
              <li><a href="/videos" class="text-neutral-400 hover:text-white transition-colors">Videos</a></li>
              <li><a href="/music" class="text-neutral-400 hover:text-white transition-colors">Music</a></li>
              <li><a href="/books" class="text-neutral-400 hover:text-white transition-colors">Books</a></li>
            </ul>
          </div>
          <div>
            <h4 class="font-semibold mb-3">Legal</h4>
            <ul class="space-y-2 text-s">
              <li><a href="/privacy" class="text-neutral-400 hover:text-white transition-colors">Privacy Policy</a></li>
            </ul>
          </div>
        </div>
        <div class="border-t border-neutral-700 mt-8 pt-8 text-center text-sm text-neutral-400">
          <p>&copy; {new Date().getFullYear()} Real & Raw Gospel. All glory to YAHUAH.</p>
        </div>
      </div>
    </footer>

    <script>
      const toggle = document.getElementById('mobile-menu-toggle');
      const menu = document.getElementById('mobile-menu');
      
      toggle?.addEventListener('click', () => {
        menu?.classList.toggle('hidden');
      });
    </script>
  </body>
</html>

